<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/background_light"
              android:layout_marginBottom="@dimen/text_padding"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/primary_text_light"
        android:shadowColor="@android:color/darker_gray"
        android:text="Large Text"
        android:id="@+id/textView1title"
        android:clickable="false"
        android:longClickable="false"
        android:focusable="false"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        android:paddingTop="@dimen/text_padding"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/tertiary_text_light"
        android:text=""
        android:id="@+id/textView5Author"
        android:clickable="false"
        android:longClickable="false"
        android:focusable="false"
        android:paddingLeft="@dimen/text_padding"
        android:paddingRight="@dimen/text_padding"
        />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:clickable="false"
                  android:longClickable="false"
                  android:focusable="false"
        >
        <ImageView
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_view"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:layout_weight="1"
            android:id="@+id/imageIconUrl"
            android:background="@android:color/transparent"
            android:padding="@dimen/text_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="6"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/secondary_text_light"
            android:text="Medium Text so many lines in this text so many lines in this text so many lines in this text so many lines in this text"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:layout_weight="4"
            android:id="@+id/textView2text"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light"
            android:text=""
            android:src="@android:drawable/btn_star_big_off"
            android:id="@+id/imageView7UnFavor"
            android:clickable="true"
            android:longClickable="false"
            android:focusable="false"
            android:padding="@dimen/text_padding"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light"
            android:text="Small Text Right Date"
            android:src="@android:drawable/btn_star_big_off"
            android:id="@+id/imageView8Favor"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light"
            android:text=""
            android:id="@+id/textView4Agency"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:padding="@dimen/text_padding"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/tertiary_text_light"
            android:text="Small Text Right Date"
            android:id="@+id/textView3date"
            android:clickable="false"
            android:longClickable="false"
            android:focusable="false"
            android:padding="@dimen/text_padding"
            />
    </LinearLayout>
</LinearLayout>